Map {
 background-color: white;
}

#histpoint {
 marker-width:0.25;
 marker-fill:black;
 marker-line-width:0;
 marker-opacity:0.01;
 marker-allow-overlap:true;
}
#histpoint {
 [version > 1] { marker-width:0.5; }
 [version > 2] { marker-width:1; }
 [version > 3] { marker-width:1.5; }
 [version > 4] { marker-width:2; }
 [version > 5] { marker-width:2.5; }
 [version > 6] { marker-width:3; }
 [version > 7] { marker-width:3.5; }
 [version > 8] { marker-width:4; }
 [version > 9] { marker-width:4.5; }
 [version > 10] { marker-width:5; }
 [version > 11] { marker-width:5.5; }
 [version > 12] { marker-width:6; }
 [version > 14] { marker-width:6.5; }
 [version > 16] { marker-width:7; }
 [version > 18] { marker-width:7.5; }
 [version > 20] { marker-width:8; }
 [version > 23] { marker-width:8.5; }
 [version > 26] { marker-width:9; }
 [version > 30] { marker-width:9.5; }
 [version > 35] { marker-width:10; }
 [version > 40] { marker-width:11; }
 [version > 45] { marker-width:12; }
 [version > 50] { marker-width:13; }
 [version > 55] { marker-width:14; }
 [version > 60] { marker-width:15; }
 [version > 65] { marker-width:16; }
 [version > 70] { marker-width:17; }
 [version > 75] { marker-width:18; }
 [version > 80] { marker-width:19; }
 [version > 90] { marker-width:20; }
}

